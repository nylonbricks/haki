{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "ultracite/core",
    "ultracite/next"
  ],
  "linter": {
    "rules": {
      "performance": {
        "noBarrelFile": "off"
      },
      "style": {
        "noNestedTernary": "off"
      },
      "correctness": {
        "useImageSize": "off",
        "noUnknownFunction": "off",
        "noUnknownProperty": "off",
        "noUnknownTypeSelector": "off"
      }
    }
  }
}